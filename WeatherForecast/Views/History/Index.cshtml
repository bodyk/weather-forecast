@using WeatherForecast.Models.Entities

@model ICollection<WeatherForecast.Models.Entities.RequestHistoryEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Clear History", "Index", "History", new { bClear = true }, null)
<br/>
@if (Model.Count != 0)
{
    <table>
        <tr>
            <td>Time</td>
            <td>RequestInfo</td> 
        </tr>
        @foreach (var historyItem in Model)
        {
            <tr>
                <td>
                    @historyItem.RequestTime
                </td>
                <td>
                    @historyItem.WeatherEntity.CityName
                </td>
            </tr>
        }
    </table>
}
